<telerik:RadWindow
    xmlns:telerik="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Navigation"
    x:Class="GalaxySMS.ConfigManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resx="clr-namespace:GalaxySMS.ConfigManager.Properties"
    xmlns:v="clr-namespace:GalaxySMS.ConfigManager.Views"
    xmlns:navigation="clr-namespace:Telerik.Windows.Controls.Navigation;assembly=Telerik.Windows.Controls.Navigation"
    xmlns:controls="http://schemas.telerik.com/2008/xaml/presentation"
    navigation:RadWindowInteropHelper.ShowInTaskbar="True"
    navigation:RadWindowInteropHelper.Icon="Secure.ico"
    navigation:RadWindowInteropHelper.Title="{x:Static resx:Resources.MainView_ApplicationTitle}"
    Header="{x:Static resx:Resources.MainView_ApplicationTitle}"
    MinHeight="600" MinWidth="800" 
    PreviewClosed="RadWindow_PreviewClosed"
    WindowStartupLocation="CenterScreen">
    <telerik:RadWindow.Resources>
    </telerik:RadWindow.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <v:MainView x:Name="main" Margin="10" />
        </Grid>
    </ScrollViewer>
</telerik:RadWindow>
