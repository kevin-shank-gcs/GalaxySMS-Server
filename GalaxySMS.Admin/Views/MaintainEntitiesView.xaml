                                            <telerik:DataFormDataField LabelPosition="Above" DataMemberBinding="{Binding EntityKey, Mode=TwoWay}" 
                                                                   Label="{x:Static resx:Resources.MaintainEntities_EntityKey}" IsEnabled="False"></telerik:DataFormDataField>
