<Window x:Class="SG.PhotoVerification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resx="clr-namespace:SG.PhotoVerification.Properties"
        xmlns:v="clr-namespace:SG.PhotoVerification.Views"
        Title="{x:Static resx:Resources.MainView_ApplicationTitle}"
        MinHeight="600" MinWidth="800" Closing="Window_Closing">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <v:MainView x:Name="main" Margin="10" />
        </Grid>
    </ScrollViewer>
</Window>
