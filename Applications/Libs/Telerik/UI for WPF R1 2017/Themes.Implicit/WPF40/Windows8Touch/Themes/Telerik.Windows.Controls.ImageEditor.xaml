    <Style TargetType="imaging:PercentComboBox" BasedOn="{StaticResource PercentComboBoxStyle}"/>
    <Style TargetType="controls:RadImageEditorButton" BasedOn="{StaticResource RadImageEditorButtonStyle}"/>
