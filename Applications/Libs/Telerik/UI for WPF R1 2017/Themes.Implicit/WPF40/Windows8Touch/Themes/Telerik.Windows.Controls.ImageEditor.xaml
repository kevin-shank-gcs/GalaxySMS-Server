        </Setter>
    </Style>
    <Style TargetType="toolsUI:ShapeToolSettings" x:Key="ShapeToolSettingsStyle">
        <Setter Property="Foreground" Value="{telerik:Windows8TouchResource ResourceKey=MainForegroundBrush}"/>
        <Setter Property="FontFamily" Value="{telerik:Windows8TouchResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:Windows8TouchResource ResourceKey=FontSizeL}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Padding" Value="{StaticResource ToolSettings_ControlPadding}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:ShapeToolSettings">
                    <Grid Margin="{TemplateBinding Padding}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="shapeToolHelperTextBlock" telerik:LocalizationManager.ResourceKey="ImageEditor_ShapeTool_Shape" Visibility="Collapsed"/>
                        <TextBlock
                                Margin="{StaticResource ToolSettingsHeader_Margin}"
                                FontSize="{telerik:Windows8TouchResource ResourceKey=FontSizeXL}"
                                FontFamily="{telerik:Windows8TouchResource ResourceKey=FontFamilyLight}"
                                Foreground="{telerik:Windows8TouchResource ResourceKey=AccentBrush}"
                                FontWeight="Bold"
                                Text="{Binding ElementName=shapeToolHelperTextBlock, Path=Text}"/>
                        <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Margin="{StaticResource ToolSettings_ContentPresenterMargin}" Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="26"/>
                                <RowDefinition Height="Auto" MinHeight="26"/>
                                <RowDefinition Height="Auto" MinHeight="26"/>
                                <RowDefinition Height="Auto" MinHeight="26"/>
                                <RowDefinition Height="Auto" MinHeight="26"/>
                            </Grid.RowDefinitions>
                            <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_ShapeTool_Shape" VerticalAlignment="Center"/>
                            <telerik:RadComboBox x:Name="PART_ShapeComboBox"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    SelectedIndex="0"
                                    Width="125"
                                    DisplayMemberPath="DisplayName"
                                    VerticalAlignment="Center"
                                    Margin="0 4"/>
                            <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_ShapeTool_ShapeFill" Grid.Row="1" VerticalAlignment="Center"/>
                            <telerik:RadColorPicker
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    SelectedColor="Transparent"
                                    x:Name="PART_FillColorPicker"
                                    Margin="0 4"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    AutomaticColor="Transparent"
                                    NoColorText="{telerik:LocalizableResource Key=ImageEditor_ColorPicker_NoColorText_Transparent}"/>
                            <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_ShapeTool_BorderThickness" Grid.Row="2" VerticalAlignment="Center" Margin="0 0 7 0"/>
                            <telerik:RadNumericUpDown x:Name="PART_BrushSizeNumericUpDown"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Value="1"
                                    Minimum="1"
                                    Maximum="99"
                                    Margin="0 4"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Width="125"/>
                            <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_ShapeTool_BorderColor" Grid.Row="3" VerticalAlignment="Center"/>
                            <telerik:RadColorPicker x:Name="PART_StrokeColorPicker"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0 4"
                                    SelectedColor="Black"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    AutomaticColor="Black"
                                    NoColorText="{telerik:LocalizableResource Key=ImageEditor_ColorPicker_NoColorText_Black}"/>
                            <CheckBox x:Name="PART_LockRatioCheckBox"
                                    Grid.Row="4"
                                    telerik:LocalizationManager.ResourceKey="ImageEditor_ShapeTool_LockRatio"
                                    HorizontalAlignment="Left"
                                    IsChecked="False"
                                    Margin="0 5"
                                    Foreground="{telerik:Windows8TouchResource ResourceKey=MainForegroundBrush}"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
