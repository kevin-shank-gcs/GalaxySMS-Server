                                AutomationProperties.AutomationId="RepeatMonthly"
                                Style="{StaticResource RepeatSelectionTabItemControlStyle}"
                                Header="Monthly"
                                IsSelected="{Binding Path=RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Monthly;MonthlyNth, Mode=TwoWay}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <RadioButton x:Name="MonthlyRB"
                                            AutomationProperties.AutomationId="MonthlyRB"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            GroupName="MonthlyButtons"
                                            telerik:LocalizationManager.ResourceKey="Day"
                                            IsChecked="{Binding RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Monthly, Mode=TwoWay}"/>
                                    <telerik:RadNumericUpDown x:Name="MonthlyDetailsUpDown1"
                                            AutomationProperties.AutomationId="MonthlyDetailsUpDown1"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            MinWidth="70"
                                            IsInteger="True"
                                            Maximum="31"
                                            Value="{Binding DaysOfMonth, Mode=TwoWay, Converter={StaticResource MultipleToSingleConverter}, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                                    <TextBlock Margin="3" VerticalAlignment="Center" telerik:LocalizationManager.ResourceKey="OfEvery"/>
                                    <telerik:RadNumericUpDown x:Name="MonthlyDetailsUpDown2"
                                            AutomationProperties.AutomationId="MonthlyDetailsUpDown2"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            MinWidth="70"
                                            IsInteger="True"
                                            Maximum="99"
                                            Value="{Binding Interval, Mode=TwoWay}"/>
                                    <TextBlock Margin="3" VerticalAlignment="Center" telerik:LocalizationManager.ResourceKey="Months"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <RadioButton x:Name="MonthlyNthRB"
                                            AutomationProperties.AutomationId="MonthlyNthRB"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            GroupName="MonthlyButtons"
                                            telerik:LocalizationManager.ResourceKey="The"
                                            IsChecked="{Binding RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=MonthlyNth, Mode=TwoWay}"/>
                                    <telerik:RadComboBox
                                            AutomationProperties.AutomationId="IntervalComboBox"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Width="70"
                                            ItemsSource="{Binding WeekOfMonths}"
                                            DisplayMemberPath="Name"
                                            SelectedValuePath="Value"
                                            SelectedValue="{Binding WeekOfMonth, Mode=TwoWay}"/>
                                    <telerik:RadComboBox
                                            AutomationProperties.AutomationId="DayIntervalComboBox"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Width="100"
                                            ItemsSource="{Binding NthRecurrenceDays}"
                                            DisplayMemberPath="Name"
                                            SelectedValuePath="Value"
                                            SelectedValue="{Binding NthRecurrenceDay, Mode=TwoWay}"/>
                                    <TextBlock Margin="3" VerticalAlignment="Center" telerik:LocalizationManager.ResourceKey="OfEvery"/>
                                    <telerik:RadNumericUpDown x:Name="MonthlyDetailsUpDown3"
                                            AutomationProperties.AutomationId="MonthlyDetailsUpDown3"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            MinWidth="70"
                                            IsInteger="True"
                                            Maximum="99"
                                            Value="{Binding Interval, Mode=TwoWay}"/>
                                    <TextBlock Margin="3" VerticalAlignment="Center" telerik:LocalizationManager.ResourceKey="Months"/>
                                </StackPanel>
                            </Grid>
                        </telerik:RadTabItem>
                        <telerik:RadTabItem x:Name="RepeatYearly"
                                AutomationProperties.AutomationId="RepeatYearly"
                                Style="{StaticResource RepeatSelectionTabItemControlStyle}"
                                Header="Yearly"
                                IsSelected="{Binding Path=RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Yearly;YearlyNth, Mode=TwoWay}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50*"/>
                                    <RowDefinition Height="50*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <RadioButton x:Name="YearlyRB"
                                            AutomationProperties.AutomationId="YearlyRB"
                                            GroupName="YearlyGroup"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            telerik:LocalizationManager.ResourceKey="Every"
                                            IsChecked="{Binding RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Yearly, Mode=TwoWay}"/>
                                    <telerik:RadComboBox x:Name="YearlyDetails12"
                                            AutomationProperties.AutomationId="YearlyDetails12"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Width="100"
                                            ItemsSource="{Binding NamesOfMonths}"
                                            DisplayMemberPath="Value"
                                            SelectedValuePath="Key"
                                            SelectedValue="{Binding MonthOfYear, Mode=TwoWay}"/>
                                    <telerik:RadNumericUpDown x:Name="YearlyDetailsUpDown3"
                                            AutomationProperties.AutomationId="YearlyDetailsUpDown3"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Width="70"
                                            IsInteger="True"
                                            Maximum="31"
                                            Value="{Binding DaysOfMonth, Mode=TwoWay, Converter={StaticResource MultipleToSingleConverter}}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <RadioButton x:Name="YearlyNthRB"
                                            AutomationProperties.AutomationId="YearlyNthRB"
                                            GroupName="YearlyGroup"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            telerik:LocalizationManager.ResourceKey="The"
                                            IsChecked="{Binding RecurrenceType, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=YearlyNth, Mode=TwoWay}"/>
                                    <telerik:RadComboBox x:Name="YearlyDetails21"
                                            AutomationProperties.AutomationId="YearlyDetails21"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Width="80"
                                            ItemsSource="{Binding WeekOfMonths}"
                                            DisplayMemberPath="Name"
                                            SelectedValuePath="Value"
                                            SelectedValue="{Binding WeekOfMonth, Mode=TwoWay}"/>
                                    <telerik:RadComboBox x:Name="YearlyDetails22"
                                            AutomationProperties.AutomationId="YearlyDetails22"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Width="100"
                                            ItemsSource="{Binding NthRecurrenceDays}"
                                            DisplayMemberPath="Name"
                                            SelectedValuePath="Value"
                                            SelectedValue="{Binding NthRecurrenceDay, Mode=TwoWay}"/>
                                    <TextBlock Margin="3" VerticalAlignment="Center" telerik:LocalizationManager.ResourceKey="Of"/>
                                    <telerik:RadComboBox x:Name="YearlyDetails23"
                                            AutomationProperties.AutomationId="YearlyDetails23"
                                            Margin="3"
                                            VerticalAlignment="Center"
                                            Width="100"
                                            ItemsSource="{Binding NamesOfMonths}"
                                            DisplayMemberPath="Value"
                                            SelectedValuePath="Key"
                                            SelectedValue="{Binding MonthOfYear, Mode=TwoWay}"/>
                                </StackPanel>
                            </Grid>
                        </telerik:RadTabItem>
