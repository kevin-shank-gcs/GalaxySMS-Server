    <ControlTemplate x:Key="NonEditableComboToggleButtonControlTemplate" TargetType="telerik:RadToggleButton">
        <Grid Background="#01FFFFFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="ToggleButtonBackground"
                    Grid.ColumnSpan="2"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{telerik1:GreenResource ResourceKey=CornerRadius}"/>
            <Path x:Name="DropDownIcon"
                    Grid.Column="1"
                    Data="{StaticResource ArrowDown}"
                    Stretch="Fill"
                    Fill="{telerik1:GreenResource ResourceKey=StrongBrush}"
                    Width="6"
                    Height="4"
                    Margin="5 0"/>
            <Grid Grid.Column="0" Margin="2 0 0 0">
                <ContentPresenter x:Name="Content"
                        Margin="{TemplateBinding Padding}"
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                    <ContentPresenter.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </ContentPresenter.Resources>
                </ContentPresenter>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsEnabled" Value="True"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background" TargetName="ToggleButtonBackground" Value="{telerik1:GreenResource ResourceKey=MouseOverBrush}"/>
                <Setter Property="BorderBrush" TargetName="ToggleButtonBackground" Value="{telerik1:GreenResource ResourceKey=MouseOverBrush}"/>
                <Setter Property="Fill" TargetName="DropDownIcon" Value="{telerik1:GreenResource ResourceKey=SelectedBrush}"/>
            </MultiTrigger>
            <Trigger Property="IsChecked" Value="true">
                <Setter Property="BorderBrush" TargetName="ToggleButtonBackground" Value="{telerik1:GreenResource ResourceKey=AccentHighBrush}"/>
                <Setter Property="Background" TargetName="ToggleButtonBackground" Value="{telerik1:GreenResource ResourceKey=AccentHighBrush}"/>
                <Setter Property="Fill" TargetName="DropDownIcon" Value="{telerik1:GreenResource ResourceKey=SelectedBrush}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" TargetName="Content" Value="{telerik1:GreenResource ResourceKey=DisabledOpacity}"/>
                <Setter Property="Opacity" TargetName="DropDownIcon" Value="{telerik1:GreenResource ResourceKey=DisabledOpacity}"/>
                <Setter Property="Fill" TargetName="DropDownIcon" Value="{telerik1:GreenResource ResourceKey=MarkerBrush}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="NonEditableComboToggleButtonStyle" TargetType="telerik:RadToggleButton">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="IsTabStop" Value="True"/>
        <Setter Property="ClickMode" Value="Press"/>
        <Setter Property="Template" Value="{StaticResource NonEditableComboToggleButtonControlTemplate}"/>
    </Style>
    <ControlTemplate x:Key="EditableComboToggleButtonControlTemplate" TargetType="telerik:RadToggleButton">
        <Grid>
            <Border x:Name="ToggleButtonBackground"
                    Grid.ColumnSpan="2"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{telerik1:GreenResource ResourceKey=CornerRadiusRight}"/>
            <Path x:Name="DropDownIcon"
                    Grid.Column="1"
                    Data="{StaticResource ArrowDown}"
                    Stretch="Fill"
                    Fill="{telerik1:GreenResource ResourceKey=StrongBrush}"
                    Width="6"
                    Height="4"
                    Margin="5 0"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" TargetName="ToggleButtonBackground" Value="{telerik1:GreenResource ResourceKey=MouseOverBrush}"/>
                <Setter Property="Background" TargetName="ToggleButtonBackground" Value="{telerik1:GreenResource ResourceKey=MouseOverBrush}"/>
                <Setter Property="Fill" TargetName="DropDownIcon" Value="{telerik1:GreenResource ResourceKey=SelectedBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Fill" TargetName="DropDownIcon" Value="{telerik1:GreenResource ResourceKey=SelectedBrush}"/>
                <Setter Property="Background" TargetName="ToggleButtonBackground" Value="{telerik1:GreenResource ResourceKey=AccentHighBrush}"/>
                <Setter Property="BorderBrush" TargetName="ToggleButtonBackground" Value="{telerik1:GreenResource ResourceKey=AccentHighBrush}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" TargetName="DropDownIcon" Value="{telerik1:GreenResource ResourceKey=DisabledOpacity}"/>
                <Setter Property="Fill" TargetName="DropDownIcon" Value="{telerik1:GreenResource ResourceKey=MarkerBrush}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    <Style x:Key="EditableComboToggleButtonStyle" TargetType="telerik:RadToggleButton">
        <Setter Property="BorderBrush" Value="{telerik1:GreenResource ResourceKey=BasicBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
