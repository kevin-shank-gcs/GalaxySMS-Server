    <ControlTemplate x:Key="GroupHeaderButtonControlTemplate" TargetType="telerikScheduleView:GroupHeaderButton">
        <Grid x:Name="Root">
            <telerik:LayoutTransformControl x:Name="Visuals">
                <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}"/>
            </telerik:LayoutTransformControl>
            <ContentControl x:Name="Content"
                    Content="{TemplateBinding Content}"
                    ContentTemplate="{TemplateBinding ContentTemplate}"
                    Margin="-1"
                    HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                    ContentStringFormat="{TemplateBinding ContentStringFormat}"
                    ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"/>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter TargetName="Visuals" Property="LayoutTransform">
                    <Setter.Value>
                        <RotateTransform Angle="-90"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsCommandAttached" Value="True"/>
                    <Condition Property="IsMouseOver" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="Border" Property="Background" Value="{telerik1:GreenResource ResourceKey=MouseOverBrush}"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsCommandAttached" Value="True"/>
                    <Condition Property="IsPressed" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="Border" Property="Background" Value="{telerik1:GreenResource ResourceKey=AccentHighBrush}"/>
            </MultiTrigger>
            <Trigger Property="IsToday" Value="True">
                <Setter TargetName="Border" Property="Background" Value="{telerik1:GreenResource ResourceKey=AccentLowBrush}"/>
                <Setter TargetName="Border" Property="BorderBrush" Value="{telerik1:GreenResource ResourceKey=AccentLowBrush}"/>
                <Setter TargetName="Border" Property="Margin" Value="0 1 0 0"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
