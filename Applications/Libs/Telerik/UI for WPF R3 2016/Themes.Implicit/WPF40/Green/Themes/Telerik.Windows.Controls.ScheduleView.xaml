                <Setter TargetName="FocusVisual" Property="Visibility" Value="Visible"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="BackgroundVisual" Property="Background" Value="{telerik1:GreenResource ResourceKey=AlternativeBrush}"/>
