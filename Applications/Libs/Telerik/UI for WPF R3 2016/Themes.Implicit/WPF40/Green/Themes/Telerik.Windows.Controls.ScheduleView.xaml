                                Margin="2 2 1 1"
                                Width="10"
                                Height="10"
                                Visibility="{Binding Path=RecurrenceState, Converter={StaticResource RecurrenceStateIsExeptionToVisibilityConverter}}"
                                HorizontalAlignment="Left"
                                Source="{StaticResource AppointmentItem_Recurrence}"/>
