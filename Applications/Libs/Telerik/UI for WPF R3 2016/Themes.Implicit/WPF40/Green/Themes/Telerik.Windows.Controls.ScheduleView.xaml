                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Path
                            Grid.ColumnSpan="2"
                            Grid.Row="0"
                            Data="{StaticResource ArrowUp7x4}"
