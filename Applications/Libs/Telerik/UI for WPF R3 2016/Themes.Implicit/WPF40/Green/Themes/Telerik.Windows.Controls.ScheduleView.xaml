    <Style x:Key="RadPromptStyle" TargetType="telerikNavigation:RadPrompt">
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Width" Value="350"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
