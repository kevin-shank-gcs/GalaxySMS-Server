                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_ImageSize" Grid.ColumnSpan="6" VerticalAlignment="Center"/>
                                <TextBlock x:Name="LabelImageSize" Grid.Column="3" Grid.ColumnSpan="3" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="1" telerik:LocalizationManager.ResourceKey="ImageEditor_Width" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <telerik:RadNumericUpDown x:Name="NumericWidthPx"
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        IsInteger="True"
                                        Maximum="4000"
                                        Width="70"
                                        Minimum="1"
                                        NumberDecimalDigits="0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="0 0 5 0"
                                        UpdateValueEvent="PropertyChanged"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="px" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" telerik:LocalizationManager.ResourceKey="ImageEditor_Height" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <telerik:RadNumericUpDown x:Name="NumericHeightPx"
                                        Grid.Row="2"
                                        Grid.Column="3"
                                        IsInteger="True"
                                        Maximum="4000"
                                        Minimum="1"
                                        Width="70"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="0 0 5 0"
                                        NumberDecimalDigits="0"
                                        UpdateValueEvent="PropertyChanged"/>
                                <TextBlock Grid.Row="2" Grid.Column="4" Text="px" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0"/>
                                <TextBlock
                                        Grid.Row="3"
                                        Grid.ColumnSpan="6"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_RelativeSize"
                                        VerticalAlignment="Center"
                                        Margin="{StaticResource ToolSettings_TextTopMargin}"/>
                                <TextBlock Grid.Row="4" telerik:LocalizationManager.ResourceKey="ImageEditor_Width" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <telerik:RadNumericUpDown x:Name="NumericWidthPercent"
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        IsInteger="False"
                                        Maximum="100000"
                                        Minimum="0"
                                        Margin="0 0 5 0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        NumberDecimalDigits="2"
                                        UpdateValueEvent="PropertyChanged"
                                        Width="70"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="%" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0"/>
                                <TextBlock Grid.Row="4" Grid.Column="3" telerik:LocalizationManager.ResourceKey="ImageEditor_Height" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <telerik:RadNumericUpDown x:Name="NumericHeightPercent"
                                        Grid.Row="5"
                                        Grid.Column="3"
                                        IsInteger="False"
                                        Maximum="100000"
                                        Minimum="0"
                                        NumberDecimalDigits="2"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="0 0 5 0"
                                        UpdateValueEvent="PropertyChanged"
                                        Width="70"/>
                                <TextBlock Grid.Row="5" Grid.Column="4" Text="%" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0"/>
                                <TextBlock
                                        Grid.Row="6"
                                        Grid.ColumnSpan="6"
                                        telerik:LocalizationManager.ResourceKey="ImageEditor_Options"
                                        VerticalAlignment="Center"
                                        Margin="{StaticResource ToolSettings_TextTopMargin}"/>
                                <CheckBox Grid.Row="7" Grid.ColumnSpan="6" IsChecked="True" Name="CheckPreserveAspectRatio" VerticalAlignment="Center">
                                    <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_PreserveAspectRatio" VerticalAlignment="Center"/>
                                </CheckBox>
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
