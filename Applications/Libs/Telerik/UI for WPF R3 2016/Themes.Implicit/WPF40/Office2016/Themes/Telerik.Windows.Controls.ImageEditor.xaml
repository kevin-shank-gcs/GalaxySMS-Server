<ResourceDictionary
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="http://schemas.telerik.com/2008/xaml/compile"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="c"
        xmlns:imageEditor="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.ImageEditor"
        xmlns:toolsUI="clr-namespace:Telerik.Windows.Media.Imaging.Tools.UI;assembly=Telerik.Windows.Controls.ImageEditor"
        xmlns:animation="clr-namespace:Telerik.Windows.Controls.Animation;assembly=Telerik.Windows.Controls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:telerikPrimitives="clr-namespace:Telerik.Windows.Controls.Primitives;assembly=Telerik.Windows.Controls"
        xmlns:imaging="clr-namespace:Telerik.Windows.Media.Imaging;assembly=Telerik.Windows.Controls.ImageEditor">
    <ResourceDictionary.MergedDictionaries>
        <telerik:Office2016ResourceDictionary/>
    </ResourceDictionary.MergedDictionaries>
    <FontFamily x:Key="TelerikWebUI">/Telerik.Windows.Controls;component/Themes/Fonts/TelerikWebUI.ttf#TelerikWebUI</FontFamily>
    <sys:String x:Key="GlyphArrowChevronDown"></sys:String>
    <sys:String x:Key="GlyphUndo"></sys:String>
    <sys:String x:Key="GlyphRedo"></sys:String>
    <sys:String x:Key="GlyphSave"></sys:String>
    <sys:String x:Key="GlyphImageResize"></sys:String>
    <sys:String x:Key="GlyphCrop"></sys:String>
    <sys:String x:Key="GlyphMirror"></sys:String>
    <sys:String x:Key="GlyphFlipHorizontal"></sys:String>
    <sys:String x:Key="GlyphFlipVertical"></sys:String>
    <sys:String x:Key="GlyphRotate"></sys:String>
    <sys:String x:Key="GlyphPalette"></sys:String>
    <sys:String x:Key="GlyphBrightnessContrast"></sys:String>
    <sys:String x:Key="GlyphSaturation"></sys:String>
    <sys:String x:Key="GlyphGreyscale"></sys:String>
    <sys:String x:Key="GlyphBlur"></sys:String>
    <sys:String x:Key="GlyphSharpen"></sys:String>
    <sys:String x:Key="GlyphShape"></sys:String>
    <sys:String x:Key="GlyphRoundCorners"></sys:String>
    <sys:String x:Key="GlyphEditTools"></sys:String>
    <sys:String x:Key="GlyphFolderOpen"></sys:String>
    <telerik:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <Thickness x:Key="ToolSettings_ControlPadding">10 10 10 0</Thickness>
    <Thickness x:Key="ToolSettingsHeader_Margin">0 5 0 10</Thickness>
    <Thickness x:Key="ToolSettings_ContentPresenterMargin">0 5</Thickness>
    <Thickness x:Key="ToolSettings_ShortContentPresenterMargin">0 10 0 15</Thickness>
    <Thickness x:Key="ToolSettings_TextTopMargin">0 15 0 0</Thickness>
    <Style TargetType="imageEditor:RadImageEditor" x:Key="RadImageEditorStyle">
        <Setter Property="FontFamily" Value="{telerik:Office2016Resource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:Office2016Resource ResourceKey=FontSize}"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="imageEditor:RadImageEditor">
                    <Grid x:Name="LayoutRoot">
                        <ScrollViewer x:Name="ScrollViewer"
                                HorizontalScrollBarVisibility="Auto"
                                VerticalScrollBarVisibility="Auto"
                                BorderBrush="{x:Null}"
                                Background="{TemplateBinding Background}"
                                Padding="-1 -1 0 0">
                            <Grid x:Name="ScrollContent">
                                <Grid x:Name="ImageView">
                                    <Grid Background="{telerik:Office2016Resource ResourceKey=MainBrush}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image x:Name="MainImage"/>
                                        <Grid x:Name="PreviewPanel"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                        <Grid>
                            <toolsUI:InlineToolSettingsPane x:Name="ToolSettingsPane" Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:InlineToolSettingsPane" x:Key="InlineToolSettingsPaneStyle">
        <Setter Property="FontFamily" Value="{telerik:Office2016Resource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:Office2016Resource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:Office2016Resource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="MinWidth" Value="160"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:InlineToolSettingsPane">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Cursor="Hand">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Margin="4"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="4">
                                <telerik:RadButton Name="ButtonOK" Margin="4 0" MinWidth="58" telerik:LocalizationManager.ResourceKey="Ok"/>
                                <telerik:RadButton Name="ButtonCancel" Margin="4 0" MinWidth="58" telerik:LocalizationManager.ResourceKey="Cancel"/>
                                <telerik:RadButton Name="ButtonReset" Margin="4 0" MinWidth="58" HorizontalAlignment="Right" telerik:LocalizationManager.ResourceKey="Reset"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:ToolSettingsPanel" x:Key="ToolSettingsPanelStyle">
        <Setter Property="FontFamily" Value="{telerik:Office2016Resource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:Office2016Resource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:Office2016Resource ResourceKey=MarkerBrush}"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="MinWidth" Value="210"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:ToolSettingsPanel">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter Margin="{TemplateBinding Margin}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </ScrollViewer>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="10">
                            <telerik:RadButton x:Name="ButtonOK" Visibility="Collapsed" MinWidth="58" Margin="0 0 8 0" telerik:LocalizationManager.ResourceKey="Ok"/>
                            <telerik:RadButton x:Name="ButtonCancel" Visibility="Collapsed" MinWidth="58" Margin="0 0 8 0" telerik:LocalizationManager.ResourceKey="Cancel"/>
                            <telerik:RadButton x:Name="ButtonReset" MinWidth="58" telerik:LocalizationManager.ResourceKey="Reset"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="ThumbStyleEmpty">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="Black"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="IntersectionThumbStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="{telerik:Office2016Resource ResourceKey=AccentFocusedBrush}" Width="5" Height="5"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="BridgeThumbStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="{telerik:Office2016Resource ResourceKey=AccentFocusedBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:CropAdorner" x:Key="CropAdornerStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:CropAdorner">
                    <Grid x:Name="MainGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1"/>
                        <Thumb x:Name="ThumbC" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource ThumbStyleEmpty}" Opacity="0"/>
                        <Thumb x:Name="ThumbL"
                                Width="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="-8 0 0 0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeWE"/>
                        <Thumb x:Name="ThumbR"
                                Width="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 0 -8 0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Stretch"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeWE"/>
                        <Thumb x:Name="ThumbT"
                                Height="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 -8 0 0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeNS"/>
                        <Thumb x:Name="ThumbB"
                                Height="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 0 0 -8"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeNS"/>
                        <Thumb x:Name="ThumbTL"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="-2 -2 0 0"
                                Cursor="SizeNWSE"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Style="{StaticResource IntersectionThumbStyle}"/>
                        <Thumb x:Name="ThumbTR"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 -2 -2 0"
                                Cursor="SizeNESW"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource IntersectionThumbStyle}"/>
                        <Thumb x:Name="ThumbBR"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 0 -2 -2"
                                Cursor="SizeNWSE"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource IntersectionThumbStyle}"/>
                        <Thumb x:Name="ThumbBL"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="-2 0 0 -2"
                                Cursor="SizeNESW"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource IntersectionThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeL" Grid.Row="1" Grid.Column="1" Width="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeT" Grid.Row="1" Grid.Column="1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeR" Grid.Row="1" Grid.Column="1" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeB" Grid.Row="1" Grid.Column="1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Style="{StaticResource BridgeThumbStyle}"/>
                        <Canvas Grid.Row="1" Grid.Column="1" Margin="-2 -16 0 0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="CropSizeLabel" Foreground="{telerik:Office2016Resource ResourceKey=MarkerInvertedBrush}" IsHitTestVisible="False"/>
                                <TextBlock Text="px" Margin="2 0 0 0" Foreground="{telerik:Office2016Resource ResourceKey=MarkerInvertedBrush}" IsHitTestVisible="False"/>
                            </StackPanel>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <ControlTemplate x:Key="ImageEditorToggleButtonTemplate" TargetType="telerik:RadToggleButton">
        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
    </ControlTemplate>
    <Style x:Key="EmptyFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="Transparent" StrokeThickness="0" Margin="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ImageEditorExpanderStyle" TargetType="telerik:RadExpander">
        <Setter Property="FontFamily" Value="{telerik:Office2016Resource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:Office2016Resource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:Office2016Resource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="#00FFFFFF"/>
        <Setter Property="BorderBrush" Value="#00FFFFFF"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4 0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="VerticalHeaderAlignment" Value="Center"/>
        <Setter Property="ExpandDirection" Value="Down"/>
        <Setter Property="animation:AnimationManager.AnimationSelector">
            <Setter.Value>
                <animation:AnimationSelector>
                    <animation:ExpanderExpandCollapseAnimation AnimationName="Expand" Direction="In" TargetElementName="Content"/>
                    <animation:ExpanderExpandCollapseAnimation AnimationName="Collapse" Direction="Out" TargetElementName="Content"/>
                </animation:AnimationSelector>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerik:RadExpander">
                    <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ExpandStateGroup">
                                <VisualState x:Name="Expanded">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="arrow" Storyboard.TargetProperty="(FrameworkElement.RenderTransform).Angle" To="180" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Collapsed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="arrow" Storyboard.TargetProperty="(FrameworkElement.RenderTransform).Angle" To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition x:Name="row0" Height="Auto" MinHeight="26"/>
                                    <RowDefinition x:Name="row1" Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="col0" Width="Auto"/>
                                    <ColumnDefinition x:Name="col1" Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <telerik:RadToggleButton x:Name="ImageEditorHeaderButton"
                                        TabIndex="{TemplateBinding TabIndex}"
                                        HorizontalAlignment="{TemplateBinding HorizontalHeaderAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalHeaderAlignment}"
                                        HorizontalContentAlignment="{TemplateBinding HorizontalHeaderAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalHeaderAlignment}"
                                        Background="Transparent"
                                        Template="{StaticResource ImageEditorToggleButtonTemplate}"
                                        IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                        ClickMode="{TemplateBinding ClickMode}"
                                        FontSize="{TemplateBinding FontSize}"
                                        FontStyle="{TemplateBinding FontStyle}"
                                        FontWeight="{TemplateBinding FontWeight}"
                                        FontFamily="{TemplateBinding FontFamily}"
                                        FontStretch="{TemplateBinding FontStretch}"
                                        Foreground="{TemplateBinding Foreground}"
                                        FocusVisualStyle="{StaticResource EmptyFocusVisual}">
                                    <Grid x:Name="HeaderPanel" Background="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Grid.Row="0" Margin="6 0">
                                            <Grid x:Name="arrowPanel" RenderTransformOrigin="0.5 0.5">
                                                <Grid.RenderTransform>
                                                    <RotateTransform/>
                                                </Grid.RenderTransform>
                                                <TextBlock x:Name="arrow"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Text="{StaticResource GlyphArrowChevronDown}"
                                                        FontFamily="{StaticResource TelerikWebUI}"
                                                        Foreground="{telerik:Office2016Resource ResourceKey=IconBrush}"
                                                        FontSize="16"
                                                        Margin="5 5 -5 5"
                                                        RenderTransformOrigin="0.5 0.5">
                                                    <TextBlock.RenderTransform>
                                                        <RotateTransform Angle="0"/>
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                        <telerikPrimitives:LayoutTransformControl x:Name="HeaderContentTransform" RenderTransformOrigin=".5 .5" Grid.Column="0" Grid.Row="0">
                                            <ContentControl x:Name="HeaderContent"
                                                    Margin="10 4 10 0"
                                                    VerticalAlignment="Stretch"
                                                    HorizontalAlignment="Stretch"
                                                    DataContext="{TemplateBinding Header}"
                                                    Content="{Binding}"
                                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                    FontWeight="Bold"
                                                    FontFamily="{TemplateBinding FontFamily}"
                                                    FontSize="{TemplateBinding FontSize}"
                                                    Foreground="{TemplateBinding Foreground}"/>
                                        </telerikPrimitives:LayoutTransformControl>
                                    </Grid>
                                </telerik:RadToggleButton>
                                <ContentPresenter x:Name="Content"
                                        Margin="{TemplateBinding Padding}"
                                        Visibility="Collapsed"
                                        Content="{TemplateBinding Content}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Content" Property="Opacity" Value="{telerik:Office2016Resource ResourceKey=DisabledOpacity}"/>
                            <Setter TargetName="HeaderContent" Property="Opacity" Value="{telerik:Office2016Resource ResourceKey=DisabledOpacity}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="arrow" Property="Foreground" Value="{telerik:Office2016Resource ResourceKey=AccentMouseOverBrush}"/>
                            <Setter TargetName="HeaderContent" Property="Foreground" Value="{telerik:Office2016Resource ResourceKey=AccentMouseOverBrush}"/>
                        </Trigger>
                        <Trigger Property="ResultOrientation" Value="Vertical">
                            <Setter TargetName="HeaderContentTransform" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="90"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="HeaderContentTransform" Property="Grid.Row" Value="1"/>
                        </Trigger>
                        <Trigger Property="ResultOrientation" Value="Horizontal">
                            <Setter TargetName="HeaderContentTransform" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="HeaderContentTransform" Property="Grid.Column" Value="1"/>
                        </Trigger>
                        <Trigger Property="ExpandDirection" Value="Down">
                            <Setter TargetName="col0" Property="Width" Value="*"/>
                            <Setter TargetName="row1" Property="Height" Value="*"/>
                            <Setter TargetName="Content" Property="Grid.Row" Value="1"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="arrow" Storyboard.TargetProperty="(FrameworkElement.RenderTransform).Angle" To="180" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger Property="ExpandDirection" Value="Up">
                            <Setter TargetName="col0" Property="Width" Value="*"/>
                            <Setter TargetName="row0" Property="Height" Value="*"/>
                            <Setter TargetName="ImageEditorHeaderButton" Property="Grid.Row" Value="1"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="arrow" Storyboard.TargetProperty="(FrameworkElement.RenderTransform).Angle" To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="imageEditor:RadImageEditorUI" x:Key="RadImageEditorUIStyle">
        <Setter Property="Background" Value="{telerik:Office2016Resource ResourceKey=AlternativeBrush}"/>
        <Setter Property="FontFamily" Value="{telerik:Office2016Resource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:Office2016Resource ResourceKey=FontSize}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="imageEditor:RadImageEditorUI">
                    <Grid x:Name="LayoutRoot" Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="150"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" BorderBrush="{x:Null}" Background="{TemplateBinding Background}" Margin="0 4 0 0">
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" Margin="10 5">
                                    <telerik:RadButton
                                            Command="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=OpenCommand, Mode=TwoWay}"
                                            IsBackgroundVisible="False"
                                            CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=OpenCommandParameter, Mode=TwoWay}"
                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsOpenButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Margin="1">
                                        <ToolTipService.ToolTip>
                                            <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_Open"/>
                                        </ToolTipService.ToolTip>
                                        <TextBlock
                                                Text="{StaticResource GlyphFolderOpen}"
                                                FontFamily="{StaticResource TelerikWebUI}"
                                                Foreground="{Binding (TextElement.Foreground), RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                                                FontSize="16"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </telerik:RadButton>
                                    <telerik:RadButton
                                            Command="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SaveCommand, Mode=TwoWay}"
                                            IsBackgroundVisible="False"
                                            CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=SaveCommandParameter, Mode=TwoWay}"
                                            Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsSaveButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                            Margin="1">
                                        <ToolTipService.ToolTip>
                                            <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_Save"/>
                                        </ToolTipService.ToolTip>
                                        <TextBlock
                                                Text="{StaticResource GlyphSave}"
                                                FontFamily="{StaticResource TelerikWebUI}"
                                                Foreground="{Binding (TextElement.Foreground), RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                                                FontSize="16"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </telerik:RadButton>
                                    <telerik:RadButton Command="{Binding Path=Commands.Undo, ElementName=ImageEditor}" IsBackgroundVisible="False" Margin="1">
                                        <ToolTipService.ToolTip>
                                            <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_Undo"/>
                                        </ToolTipService.ToolTip>
                                        <TextBlock
                                                Text="{StaticResource GlyphUndo}"
                                                FontFamily="{StaticResource TelerikWebUI}"
                                                Foreground="{Binding (TextElement.Foreground), RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                                                FontSize="16"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                    </telerik:RadButton>
                                    <telerik:RadButton Command="{Binding Path=Commands.Redo, ElementName=ImageEditor}" IsBackgroundVisible="False" Width="22" Height="22" Margin="1">
                                        <ToolTipService.ToolTip>
                                            <TextBlock telerik:LocalizationManager.ResourceKey="ImageEditor_Redo"/>
