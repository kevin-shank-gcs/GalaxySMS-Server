        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:ResizeToolSettings">
                    <Grid Margin="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="resizeHeaderHelperTextBlock" telerik:LocalizationManager.ResourceKey="ImageEditor_Resize" Visibility="Collapsed"/>
                            <TextBlock
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    TextWrapping="Wrap"
                                    Margin="{StaticResource ToolSettingsHeader_Margin}"
                                    Foreground="{TemplateBinding Foreground}"
                                    FontSize="{TemplateBinding FontSize}"
                                    FontWeight="Bold"
                                    Text="{Binding ElementName=resizeHeaderHelperTextBlock, Path=Text}"/>
                            <Grid Grid.Row="2" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Margin="{StaticResource ToolSettings_ContentPresenterMargin}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
                                    <RowDefinition Height="Auto" MinHeight="26"/>
