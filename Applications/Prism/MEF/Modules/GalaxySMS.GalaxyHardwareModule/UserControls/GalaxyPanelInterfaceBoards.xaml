                                    <telerik:GridViewCheckBoxColumn.Header>
                                        <StackPanel>
                                            <CheckBox Content="{x:Static sharedResources:Resources.EditGalaxyPanel_AllegionPimNodeIsActive_Title}">
                                                <i:Interaction.Triggers>
