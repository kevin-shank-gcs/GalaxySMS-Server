                                            Text="{x:Static sharedResources:Resources.EditPersonView_PersonalPropertiesTabHeaderText}" />
                                    </Grid>
                                </telerik:RadTabItem.Header>
                                <StackPanel>
                                    <localUserControls:PersonPersonalProperties />
                                </StackPanel>
                            </telerik:RadTabItem>
                            <telerik:RadTabItem>
                                <telerik:RadTabItem.Header>
