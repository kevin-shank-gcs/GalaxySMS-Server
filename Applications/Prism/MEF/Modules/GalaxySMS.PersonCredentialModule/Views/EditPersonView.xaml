                                        <Grid.ToolTip>
                                            <TextBlock
                                                Text="{x:Static sharedResources:Resources.EditPersonView_EmploymentPropertiesTabHeaderToolTip}" />
                                        </Grid.ToolTip>
                                        <TextBlock
                                            Text="{x:Static sharedResources:Resources.EditPersonView_EmploymentPropertiesTabHeaderText}" />
