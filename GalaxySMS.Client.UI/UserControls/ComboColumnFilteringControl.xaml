<UserControl x:Class="GalaxySMS.Client.UI.ComboColumnFilteringControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             Height="Auto" Background="LightGray" Width="Auto">
    <Border BorderThickness="1" BorderBrush="#FF8A929E" Padding="5" Background="#FFDFE2E5">
        <Grid Margin="8" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Select countries:" />
            <ListBox Grid.Row="1" x:Name="listBoxDistinctValues" SelectionChanged="listBoxDistinctValues_SelectionChanged" SelectionMode="Multiple" Height="Auto" MaxHeight="100" Width="100" >
            </ListBox>
        </Grid>
    </Border>
</UserControl>
