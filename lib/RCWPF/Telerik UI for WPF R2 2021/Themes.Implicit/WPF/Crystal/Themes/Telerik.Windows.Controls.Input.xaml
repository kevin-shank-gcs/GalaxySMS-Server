                                Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=History, Mode=OneWay}"
                                Style="{StaticResource CalculatorHistoryDisplay_Style}"
                                Foreground="{TemplateBinding Foreground}"/>
                    </Grid>
                    <Grid x:Name="btnContainer" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="row"/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <telerik:RadButton x:Name="Mc_Button" Content="MC" Grid.Column="0" Command="{x:Static controls:RadCalculatorCommands.MemoryClear}" Style="{StaticResource CalculatorMemoryButtonStyle}"/>
                        <telerik:RadButton x:Name="Mr_Button"
                                Content="MR"
                                Grid.Column="1"
                                Command="{x:Static controls:RadCalculatorCommands.MemoryRecall}"
                                Style="{StaticResource CalculatorMemoryButtonStyle}"/>
                        <telerik:RadButton x:Name="Ms_Button" Content="MS" Grid.Column="2" Command="{x:Static controls:RadCalculatorCommands.MemoryStore}" Style="{StaticResource CalculatorMemoryButtonStyle}"/>
                        <telerik:RadButton x:Name="Mplus_Button"
                                Content="M+"
                                Grid.Column="3"
                                Command="{x:Static controls:RadCalculatorCommands.MemoryPlus}"
                                Style="{StaticResource CalculatorMemoryButtonStyle}"/>
                        <telerik:RadButton x:Name="Mminus_Button"
                                Content="M-"
                                Grid.Column="4"
                                Command="{x:Static controls:RadCalculatorCommands.MemoryMinus}"
                                Style="{StaticResource CalculatorMemoryButtonStyle}"/>
                        <telerik:RadButton x:Name="Delete_Button"
                                Content="&lt;"
                                Grid.Row="1"
                                Grid.Column="0"
                                Command="{x:Static controls:RadCalculatorCommands.Delete}"
                                Style="{StaticResource CalculatorAlternateButtonStyle}"
                                BorderThickness="1 0 1 1"/>
                        <telerik:RadButton x:Name="ClearInput_Button"
                                Content="CE"
                                Grid.Row="1"
                                Grid.Column="1"
                                Command="{x:Static controls:RadCalculatorCommands.ClearInput}"
                                Style="{StaticResource CalculatorAlternateButtonStyle}"
