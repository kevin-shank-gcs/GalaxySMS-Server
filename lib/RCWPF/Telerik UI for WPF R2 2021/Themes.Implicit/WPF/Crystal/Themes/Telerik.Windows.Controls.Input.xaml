                        <telerik:RadButton x:Name="input1_Button" Content="1" Grid.Row="4" Grid.Column="0" Command="{x:Static controls:RadCalculatorCommands.UpdateInput}" CommandParameter="1"/>
                        <telerik:RadButton x:Name="input2_Button" Content="2" Grid.Row="4" Grid.Column="1" Command="{x:Static controls:RadCalculatorCommands.UpdateInput}" CommandParameter="2"/>
                        <telerik:RadButton x:Name="input3_Button" Content="3" Grid.Row="4" Grid.Column="2" Command="{x:Static controls:RadCalculatorCommands.UpdateInput}" CommandParameter="3"/>
                        <telerik:RadButton x:Name="Substract_Button"
                                Content="-"
                                Grid.Row="4"
                                Grid.Column="3"
                                Command="{x:Static controls:RadCalculatorCommands.AddPendingBinaryOperation}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Operations.Substract}"/>
                        <telerik:RadButton x:Name="input0_Button"
                                Content="0"
                                Grid.Row="5"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Command="{x:Static controls:RadCalculatorCommands.UpdateInput}"
                                CommandParameter="0"
                                CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(mat:MaterialAssist.CornerRadius), Converter={StaticResource CornerRadiusConverter}, ConverterParameter=BottomLeft}"/>
                        <telerik:RadButton x:Name="FloatingPoint_Button"
                                Content="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DecimalSeparator}"
                                Grid.Row="5"
                                Grid.Column="2"
                                Command="{x:Static controls:RadCalculatorCommands.UpdateInput}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=DecimalSeparator}"/>
                        <telerik:RadButton x:Name="Add_Button"
                                Content="+"
                                Grid.Row="5"
                                Grid.Column="3"
                                Command="{x:Static controls:RadCalculatorCommands.AddPendingBinaryOperation}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Operations.Add}"/>
                        <telerik:RadButton x:Name="Equals_Button"
                                Content="="
                                Grid.Row="4"
                                Grid.Column="4"
                                Grid.RowSpan="2"
                                Command="{x:Static controls:RadCalculatorCommands.ExecuteBinaryOperation}"
                                Style="{StaticResource CalculatorAlternateButtonStyle}"
                                CornerRadius="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(mat:MaterialAssist.CornerRadius), Converter={StaticResource CornerRadiusConverter}, ConverterParameter=BottomRight}"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="MemoryButtonsVisibility" Value="Collapsed">
                <Setter Property="Visibility" TargetName="Mc_Button" Value="Collapsed"/>
                <Setter Property="Visibility" TargetName="Mr_Button" Value="Collapsed"/>
                <Setter Property="Visibility" TargetName="Ms_Button" Value="Collapsed"/>
                <Setter Property="Visibility" TargetName="Mplus_Button" Value="Collapsed"/>
                <Setter Property="Visibility" TargetName="Mminus_Button" Value="Collapsed"/>
                <Setter Property="Height" TargetName="row" Value="0"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" TargetName="MemoryIndicatorTextBox" Value="{telerik1:CrystalResource ResourceKey=DisabledOpacity}"/>
                <Setter Property="Opacity" TargetName="HistoryTextBox" Value="{telerik1:CrystalResource ResourceKey=DisabledOpacity}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
