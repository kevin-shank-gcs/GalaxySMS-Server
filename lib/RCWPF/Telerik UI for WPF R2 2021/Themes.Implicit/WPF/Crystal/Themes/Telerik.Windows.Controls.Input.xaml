    <ControlTemplate x:Key="RadCalculatorTemplate" TargetType="controls:RadCalculator">
        <Grid Background="Transparent" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" Margin="5">
            <mat:Shadow CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}" ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}" Background="{telerik1:CrystalResource ResourceKey=AlternativeBrush}"/>
            <Border
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{telerik1:CrystalResource ResourceKey=CornerRadius}"
                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                <Grid x:Name="Root" Margin="{TemplateBinding Padding}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid MinHeight="127">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="DisplayTextBox"
                                AutomationProperties.Name="DisplayTextBox"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Text="{Binding DisplayedValue, RelativeSource={RelativeSource TemplatedParent}}"
                                Style="{StaticResource CalculatorDisplayValue_Style}"
                                Foreground="{TemplateBinding Foreground}"/>
