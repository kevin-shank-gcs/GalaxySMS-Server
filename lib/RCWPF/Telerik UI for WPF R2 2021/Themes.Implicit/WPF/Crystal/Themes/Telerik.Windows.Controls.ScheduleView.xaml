    <Style x:Key="GoToDayButtonStyle" TargetType="telerik:RadButton">
        <Setter Property="Foreground" Value="{telerik1:CrystalResource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
