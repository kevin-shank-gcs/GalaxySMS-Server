                <Setter TargetName="GlyphSorting" Property="Glyph" Value="{StaticResource GlyphSortAscSmall}"/>
                <Setter TargetName="GlyphSorting" Property="Foreground" Value="{telerik:GreenResource ResourceKey=AccentLowBrush}"/>
