                <Setter TargetName="PART_SortButton" Property="Opacity" Value="1"/>
                <Setter TargetName="SelectedVisual" Property="Opacity" Value="0.8"/>
                <Setter TargetName="GlyphSorting" Property="Foreground" Value="{telerik:GreenResource ResourceKey=AccentLowBrush}"/>
