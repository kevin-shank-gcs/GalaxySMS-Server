                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="False">
                <Setter TargetName="PART_FieldLabelN" Property="Foreground" Value="{telerik1:GreenResource ResourceKey=MarkerBrush}"/>
                <Setter TargetName="PART_SelectionBackgroundN" Property="Visibility" Value="Collapsed"/>
                <Setter TargetName="PART_NestedPropertiesButton" Property="Foreground" Value="{telerik1:GreenResource ResourceKey=StrongBrush}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
