                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid x:Name="SortIndicatorGrid" Background="#01FFFFFF" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0" Grid.Column="1">
                    <telerik:RadGlyph x:Name="PART_SortIndicator"
                            IsHitTestVisible="False"
                            Foreground="{telerik:Office2019Resource ResourceKey=IconBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Glyph="{StaticResource GlyphArrow60Down}"
                            FontSize="16"/>
                </Grid>
                <ContentControl x:Name="ContentElement"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        Margin="{TemplateBinding Padding}"
                        Foreground="{TemplateBinding Foreground}"
                        IsTabStop="{TemplateBinding IsTabStop}"
                        Content="{TemplateBinding Content}"
                        Opacity="1">
                    <ContentControl.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </ContentControl.RenderTransform>
                </ContentControl>
                <Button x:Name="PART_CloseButton"
                        AutomationProperties.Name="CloseButton"
                        Foreground="{TemplateBinding Foreground}"
                        Style="{StaticResource CardViewGroupPaneCloseButtonStyle}"
                        Margin="0 0 4 0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Opacity="0"
                        Grid.Column="2"/>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>

            <!-- IsMouseOver -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="PART_CloseButton" Property="Opacity" Value="1"/>
                <Setter TargetName="MouseOverVisual" Property="Visibility" Value="Visible"/>
                <Setter TargetName="PART_SortIndicator" Property="Foreground" Value="{telerik:Office2019Resource ResourceKey=HighlightedForegroundBrush}"/>
                <Setter Property="Foreground" Value="{telerik:Office2019Resource ResourceKey=HighlightedForegroundBrush}"/>
                <Setter TargetName="PART_CloseButton" Property="Foreground" Value="{telerik:Office2019Resource ResourceKey=HighlightedForegroundBrush}"/>
            </Trigger>

            <!-- SortIndicatorGrid MouseOver state -->
            <Trigger SourceName="SortIndicatorGrid" Property="IsMouseOver" Value="True">
                <Setter TargetName="PART_SortIndicator" Property="Foreground" Value="{telerik:Office2019Resource ResourceKey=AccentMouseOverBorderBrush}"/>
            </Trigger>

            <!-- PART_CloseButton MouseOver state -->
            <Trigger SourceName="PART_CloseButton" Property="IsMouseOver" Value="True">
                <Setter TargetName="PART_CloseButton" Property="Foreground" Value="{telerik:Office2019Resource ResourceKey=AccentMouseOverBorderBrush}"/>
            </Trigger>

            <!-- Disabled -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="ContentElement" Property="Opacity" Value="{telerik1:Office2019Resource ResourceKey=DisabledOpacity}"/>
                <Setter TargetName="PART_SortIndicator" Property="Opacity" Value="{telerik1:Office2019Resource ResourceKey=DisabledOpacity}"/>
                <Setter TargetName="PART_CloseButton" Property="Opacity" Value="{telerik1:Office2019Resource ResourceKey=DisabledOpacity}"/>
                <Setter TargetName="OuterBorder" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(helpers:ThemeHelper.DisabledBrush)}"/>
                <Setter TargetName="OuterBorder" Property="BorderBrush" Value="{telerik1:Office2019Resource ResourceKey=DisabledBorderBrush}"/>
            </Trigger>

            <!-- SortDirection: Ascending -->
            <DataTrigger Binding="{Binding Path=SortDirection}" Value="Ascending">
                <Setter Property="Opacity" TargetName="SortIndicatorGrid" Value="1"/>
                <Setter TargetName="PART_SortIndicator" Property="Glyph" Value="{StaticResource GlyphArrow60Up}"/>
            </DataTrigger>

            <!-- SortDirection: Descending -->
            <DataTrigger Binding="{Binding Path=SortDirection}" Value="Descending">
                <Setter Property="Opacity" TargetName="SortIndicatorGrid" Value="1"/>
            </DataTrigger>

            <!-- SortDirection: Null -->
            <DataTrigger Binding="{Binding Path=SortDirection}" Value="{x:Null}">
                <Setter Property="Opacity" TargetName="SortIndicatorGrid" Value="0"/>
            </DataTrigger>
        </ControlTemplate.Triggers>
