                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                    ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                    ContentStringFormat="{TemplateBinding ContentStringFormat}"
                    RecognizesAccessKey="True"/>
            <Popup x:Name="DropDownPopup" SnapsToDevicePixels="True" AllowsTransparency="True" Focusable="False" StaysOpen="False" Placement="Bottom">
                <Grid>
                    <Border x:Name="DropDownPopupBorder"
                            BorderBrush="{StaticResource CardView_Border}"
                            Background="{StaticResource CardView_Background}"
                            BorderThickness="1"
                            Visibility="{Binding DropDownContent,RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource NullToVisibilityConverter}}"
                            CornerRadius="0"
                            MinWidth="3"
                            MinHeight="3"
                            Width="{TemplateBinding DropDownWidth}"
                            Height="{TemplateBinding DropDownHeight}"
                            MaxWidth="{TemplateBinding DropDownMaxWidth}"
                            MaxHeight="{TemplateBinding DropDownMaxHeight}"
                            SnapsToDevicePixels="True">
                        <ContentControl x:Name="DropDownPopupContent"
                                Content="{TemplateBinding DropDownContent}"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                ContentTemplate="{TemplateBinding DropDownContentTemplate}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DataContext}"/>
                    </Border>
                </Grid>
            </Popup>
            <Border x:Name="CommonStatesWrapper">
                <Border x:Name="FocusVisual"
                        Opacity="0"
                        BorderThickness="1"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Background="{StaticResource CardView_DropDownButton_Background_Focused}"
                        BorderBrush="{StaticResource CardView_DropDownButton_Border_Focused}">
                    <Border x:Name="FocusInnerVisual" BorderThickness="1" CornerRadius="{TemplateBinding InnerCornerRadius}" BorderBrush="{StaticResource CardView_ControlInnerBorder_Focused}"/>
                </Border>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>

            <!-- background is hidden -->
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsEnabled" Value="True"/>
                    <Condition Property="IsBackgroundVisible" Value="False"/>
                    <Condition Property="IsMouseOver" Value="False"/>
                    <Condition Property="IsOpen" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter TargetName="OuterBorder" Property="Opacity" Value="0"/>
            </MultiTrigger>

            <!-- General IsKeyboardFocused setters -->
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsEnabled" Value="True"/>
                    <Condition Property="IsKeyboardFocused" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="FocusVisual" Property="Opacity" Value="1"/>
            </MultiTrigger>

            <!-- General IsMouseOver setters -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="OuterMouseOverBorder" Property="Opacity" Value="1"/>
            </Trigger>

            <!-- General IsPressed setters -->
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsOpen" Value="False"/>
                    <Condition Property="IsPressed" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="OuterPressedBorder" Property="Opacity" Value="1"/>
                <Setter TargetName="CommonStatesWrapper" Property="Opacity" Value="1"/>
            </MultiTrigger>

            <!-- General IsOpen setters -->
            <Trigger Property="IsOpen" Value="True">
                <Setter TargetName="CheckedVisual" Property="Opacity" Value="1"/>
            </Trigger>

            <!-- General disabled setters -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Content" Property="Opacity" Value="0.5"/>
                <Setter TargetName="DisabledBorder" Property="Opacity" Value="1"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
