                    <Condition Property="DisplayVisualCues" Value="True"/>
                    <Condition Property="IsValid" Value="True"/>
                    <Condition Property="IsSelected" Value="False"/>
                    <Condition SourceName="PinnedRowPresenter" Property="IsMouseOver" Value="False"/>
                    <Condition SourceName="PinnedRowPresenter" Property="IsPressed" Value="False"/>
