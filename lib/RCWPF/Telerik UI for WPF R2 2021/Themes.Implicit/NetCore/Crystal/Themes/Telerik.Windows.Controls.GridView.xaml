                <Setter TargetName="Background_Over" Property="Visibility" Value="Visible"/>
                <Setter Property="Foreground" Value="{telerik1:CrystalResource ResourceKey=MarkerInvertedBrush}"/>
                <Setter TargetName="IconRight" Property="Foreground" Value="{telerik1:CrystalResource ResourceKey=MarkerInvertedBrush}"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="DisplayVisualCues" Value="True"/>
                    <Condition Property="IsValid" Value="True"/>
                    <Condition Property="IsSelected" Value="False"/>
                    <Condition SourceName="PART_HierarchyExpandButton" Property="IsMouseOver" Value="False"/>
                    <Condition SourceName="PART_HierarchyExpandButton" Property="IsPressed" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="PART_HierarchyExpandButton" Property="Foreground" Value="{telerik1:CrystalResource ResourceKey=MarkerInvertedBrush}"/>
            </MultiTrigger>
