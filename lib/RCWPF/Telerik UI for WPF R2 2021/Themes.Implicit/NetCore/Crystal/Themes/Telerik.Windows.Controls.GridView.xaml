                <MultiTrigger.Conditions>
                    <Condition Property="DisplayVisualCues" Value="True"/>
                    <Condition SourceName="Background_Selected" Property="Visibility" Value="Visible"/>
                </MultiTrigger.Conditions>
                <Setter Property="Foreground" Value="{telerik1:CrystalResource ResourceKey=MarkerInvertedBrush}"/>
                <Setter TargetName="EditIndicatorIcon" Property="Foreground" Value="{telerik1:CrystalResource ResourceKey=MarkerInvertedBrush}"/>
                <Setter TargetName="IconRight" Property="Foreground" Value="{telerik1:CrystalResource ResourceKey=MarkerInvertedBrush}"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="DisplayVisualCues" Value="True"/>
                    <Condition SourceName="Background_Selected" Property="Visibility" Value="Visible"/>
