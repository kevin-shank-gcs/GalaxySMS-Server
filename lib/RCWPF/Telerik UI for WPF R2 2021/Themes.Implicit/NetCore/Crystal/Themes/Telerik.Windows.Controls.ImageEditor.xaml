    <Style TargetType="imageEditor:RadImageEditor" x:Key="RadImageEditorStyle">
        <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth2"/>
        <Setter Property="FontFamily" Value="{telerik:CrystalResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:CrystalResource ResourceKey=FontSize}"/>
        <Setter Property="Background" Value="{telerik:CrystalResource ResourceKey=ComplementaryBrush}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="imageEditor:RadImageEditor">
                    <Grid x:Name="LayoutRoot">
                        <ScrollViewer x:Name="ScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderBrush="{x:Null}" Background="{TemplateBinding Background}">
                            <Grid x:Name="ScrollContent">
                                <Grid x:Name="ImageView">
                                    <mat:Shadow ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}" Background="{TemplateBinding Background}"/>
                                    <Grid Background="{TemplateBinding Background}" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image x:Name="MainImage"/>
                                        <Grid x:Name="PreviewPanel"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                        <Grid>
                            <toolsUI:InlineToolSettingsPane x:Name="ToolSettingsPane" Visibility="Collapsed"/>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:InlineToolSettingsPane" x:Key="InlineToolSettingsPaneStyle">
        <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth2"/>
        <Setter Property="mat:MaterialAssist.CornerRadius" Value="{telerik:CrystalResource ResourceKey=CornerRadius}"/>
        <Setter Property="FontFamily" Value="{telerik:CrystalResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:CrystalResource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:CrystalResource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="{telerik:CrystalResource ResourceKey=PrimaryBackgroundBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:InlineToolSettingsPane">
                    <Grid>
                        <mat:Shadow
                                ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}"/>
                        <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding mat:MaterialAssist.CornerRadius}"
                                Cursor="Hand">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <ContentPresenter/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="8 2">
                                    <telerik:RadButton Name="ButtonOK" Margin="0 0 8 0" MinWidth="100" Content="{telerik:LocalizableResource Key=Ok}"/>
                                    <telerik:RadButton Name="ButtonCancel" Margin="0 0 8 0" MinWidth="100" Content="{telerik:LocalizableResource Key=Cancel}"/>
                                    <telerik:RadButton Name="ButtonReset" MinWidth="100" Content="{telerik:LocalizableResource Key=Reset}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:ToolSettingsPanel" x:Key="ToolSettingsPanelStyle">
        <Setter Property="mat:MaterialAssist.ShadowDepth" Value="Depth1"/>
        <Setter Property="FontFamily" Value="{telerik:CrystalResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:CrystalResource ResourceKey=FontSize}"/>
        <Setter Property="Foreground" Value="{telerik:CrystalResource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="{telerik:CrystalResource ResourceKey=AlternativeBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Top"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="MinWidth" Value="320"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:ToolSettingsPanel">
                    <Grid>
                        <mat:Shadow ShadowDepth="{TemplateBinding mat:MaterialAssist.ShadowDepth}" Background="{TemplateBinding Background}"/>
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </ScrollViewer>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Row="1" Margin="8 2">
                                <telerik:RadButton
                                        Visibility="Collapsed"
                                        Margin="0 10 16 10"
                                        x:Name="PART_CommitSelectionButton"
                                        MinWidth="100"
                                        Content="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_CommitSelection}"
                                        Command="{Binding Path=Commands.CommitSelection, ElementName=ImageEditor}"/>
                                <telerik:RadButton x:Name="ButtonOK" Visibility="Collapsed" MinWidth="100" Margin="4 10" Content="{telerik:LocalizableResource Key=Ok}"/>
                                <telerik:RadButton x:Name="ButtonCancel" Visibility="Collapsed" MinWidth="100" Margin="4 10" Content="{telerik:LocalizableResource Key=Cancel}"/>
                                <telerik:RadButton x:Name="ButtonReset" MinWidth="100" Margin="4 10 0 10" Content="{telerik:LocalizableResource Key=Reset}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="ThumbStyleEmpty">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="Black"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="IntersectionThumbStyle">
        <Setter Property="Panel.ZIndex" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="{telerik:CrystalResource ResourceKey=AccentBrush}" Width="10" Height="10"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="Thumb" x:Key="BridgeThumbStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Rectangle Fill="{telerik:CrystalResource ResourceKey=AccentBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="toolsUI:CropAdorner" x:Key="CropAdornerStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:CropAdorner">
                    <Grid x:Name="MainGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"/>
                        <Rectangle Fill="Black" Opacity="0.3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1"/>
                        <Thumb x:Name="ThumbC" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource ThumbStyleEmpty}" Opacity="0"/>
                        <Thumb x:Name="ThumbL"
                                Width="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="-8 0 0 0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Stretch"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeWE"/>
                        <Thumb x:Name="ThumbR"
                                Width="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 0 -8 0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Stretch"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeWE"/>
                        <Thumb x:Name="ThumbT"
                                Height="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 -8 0 0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeNS"/>
                        <Thumb x:Name="ThumbB"
                                Height="16"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0 0 0 -8"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource ThumbStyleEmpty}"
                                Opacity="0"
                                Cursor="SizeNS"/>
                        <Thumb x:Name="ThumbTL"
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="SizeNWSE"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Style="{StaticResource IntersectionThumbStyle}"
                                Margin="-5 -5 0 0"/>
                        <Thumb x:Name="ThumbTR"
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="SizeNESW"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Style="{StaticResource IntersectionThumbStyle}"
                                Margin="0 -5 -5 0"/>
                        <Thumb x:Name="ThumbBR"
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="SizeNWSE"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource IntersectionThumbStyle}"
                                Margin="0 0 -5 -5"/>
                        <Thumb x:Name="ThumbBL"
                                Grid.Row="1"
                                Grid.Column="1"
                                Cursor="SizeNESW"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource IntersectionThumbStyle}"
                                Margin="-5 0 0 -5"/>
                        <Thumb x:Name="ThumbBridgeL" Grid.Row="1" Grid.Column="1" Width="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeT" Grid.Row="1" Grid.Column="1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeR" Grid.Row="1" Grid.Column="1" Width="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" Style="{StaticResource BridgeThumbStyle}"/>
                        <Thumb x:Name="ThumbBridgeB" Grid.Row="1" Grid.Column="1" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Style="{StaticResource BridgeThumbStyle}"/>
                        <Canvas Grid.Row="1" Grid.Column="1" Margin="-2 -20 0 0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="CropSizeLabel" Foreground="{telerik:CrystalResource ResourceKey=MarkerInvertedBrush}" IsHitTestVisible="False"/>
                                <TextBlock Text="px" Margin="2 0 0 0" Foreground="{telerik:CrystalResource ResourceKey=MarkerInvertedBrush}" IsHitTestVisible="False"/>
                            </StackPanel>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <ControlTemplate x:Key="ImageEditorToggleButtonTemplate" TargetType="telerik:RadToggleButton">
        <ContentPresenter Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}"/>
    </ControlTemplate>
    <Style x:Key="EmptyFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Stroke="Transparent" StrokeThickness="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ImageEditorExpanderStyle" TargetType="telerik:RadExpander">
        <Setter Property="FontFamily" Value="{telerik:CrystalResource ResourceKey=FontFamily}"/>
        <Setter Property="FontSize" Value="{telerik:CrystalResource ResourceKey=FontSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{telerik:CrystalResource ResourceKey=MarkerBrush}"/>
        <Setter Property="Background" Value="#00FFFFFF"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalHeaderAlignment" Value="Center"/>
        <Setter Property="ExpandDirection" Value="Down"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="animation:AnimationManager.AnimationSelector">
            <Setter.Value>
                <animation:AnimationSelector>
                    <animation:ExpanderExpandCollapseAnimation AnimationName="Expand" Direction="In" TargetElementName="Content"/>
                    <animation:ExpanderExpandCollapseAnimation AnimationName="Collapse" Direction="Out" TargetElementName="Content"/>
                </animation:AnimationSelector>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerik:RadExpander">
                    <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" VerticalAlignment="{TemplateBinding VerticalAlignment}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ExpandStateGroup">
                                <VisualState x:Name="Expanded">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="arrow" Storyboard.TargetProperty="(FrameworkElement.RenderTransform).Angle" To="180" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Collapsed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="arrow" Storyboard.TargetProperty="(FrameworkElement.RenderTransform).Angle" To="0" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition x:Name="row0" Height="Auto" MinHeight="36"/>
                                    <RowDefinition x:Name="row1" Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition x:Name="col0" Width="Auto"/>
                                    <ColumnDefinition x:Name="col1" Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <telerik:RadToggleButton x:Name="ImageEditorHeaderButton"
                                        TabIndex="{TemplateBinding TabIndex}"
                                        HorizontalAlignment="{TemplateBinding HorizontalHeaderAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalHeaderAlignment}"
                                        HorizontalContentAlignment="{TemplateBinding HorizontalHeaderAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalHeaderAlignment}"
                                        Background="Transparent"
                                        Template="{StaticResource ImageEditorToggleButtonTemplate}"
                                        IsChecked="{Binding Path=IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                        ClickMode="{TemplateBinding ClickMode}"
                                        FontSize="{TemplateBinding FontSize}"
                                        FontStyle="{TemplateBinding FontStyle}"
                                        FontWeight="{TemplateBinding FontWeight}"
                                        FontFamily="{TemplateBinding FontFamily}"
                                        FontStretch="{TemplateBinding FontStretch}"
                                        Foreground="{TemplateBinding Foreground}"
                                        FocusVisualStyle="{StaticResource EmptyFocusVisual}">
                                    <Grid x:Name="HeaderPanel" Background="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <telerikPrimitives:LayoutTransformControl x:Name="HeaderContentTransform" RenderTransformOrigin=".5 .5" Grid.Column="0" Grid.Row="0">
                                            <ContentControl x:Name="HeaderContent"
                                                    Margin="8 0 0 0"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Stretch"
                                                    DataContext="{TemplateBinding Header}"
                                                    Content="{Binding}"
                                                    ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                    FontFamily="{TemplateBinding FontFamily}"
                                                    FontSize="{TemplateBinding FontSize}"
                                                    Foreground="{TemplateBinding Foreground}"/>
                                        </telerikPrimitives:LayoutTransformControl>
                                        <Grid Grid.Column="1" Grid.Row="0">
                                            <Grid x:Name="arrowPanel" Margin="3 0 8 0">
                                                <telerik:RadGlyph x:Name="arrow"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Foreground="{telerik:CrystalResource ResourceKey=IconBrush}"
                                                        FontSize="16"
                                                        Glyph="{StaticResource GlyphArrowChevronDown}"
                                                        RenderTransformOrigin="0.5 0.5">
                                                    <telerik:RadGlyph.RenderTransform>
                                                        <RotateTransform Angle="0"/>
                                                    </telerik:RadGlyph.RenderTransform>
                                                </telerik:RadGlyph>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </telerik:RadToggleButton>
                                <ContentPresenter x:Name="Content"
                                        Margin="{TemplateBinding Padding}"
                                        Visibility="Collapsed"
                                        Content="{TemplateBinding Content}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Content" Property="Opacity" Value="{telerik:CrystalResource ResourceKey=DisabledOpacity}"/>
                            <Setter TargetName="HeaderContent" Property="Opacity" Value="{telerik:CrystalResource ResourceKey=DisabledOpacity}"/>
                        </Trigger>
                        <Trigger SourceName="ImageEditorHeaderButton" Property="IsMouseOver" Value="True">
                            <Setter TargetName="arrow" Property="Foreground" Value="{telerik:CrystalResource ResourceKey=AccentMouseOverBrush}"/>
                            <Setter TargetName="HeaderContent" Property="Foreground" Value="{telerik:CrystalResource ResourceKey=AccentMouseOverBrush}"/>
                        </Trigger>
                        <Trigger Property="ResultOrientation" Value="Vertical">
                            <Setter TargetName="HeaderContentTransform" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="90"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="HeaderContentTransform" Property="Grid.Row" Value="1"/>
                        </Trigger>
                        <Trigger Property="ResultOrientation" Value="Horizontal">
                            <Setter TargetName="HeaderContentTransform" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="0"/>
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="HeaderContentTransform" Property="Grid.Column" Value="0"/>
                        </Trigger>
                        <Trigger Property="ExpandDirection" Value="Down">
                            <Setter TargetName="col0" Property="Width" Value="*"/>
                            <Setter TargetName="row1" Property="Height" Value="*"/>
                            <Setter TargetName="Content" Property="Grid.Row" Value="1"/>
                        </Trigger>
                        <Trigger Property="ExpandDirection" Value="Up">
                            <Setter TargetName="col0" Property="Width" Value="*"/>
                            <Setter TargetName="row0" Property="Height" Value="*"/>
                            <Setter TargetName="ImageEditorHeaderButton" Property="Grid.Row" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="IncreaseHandleBaseStyle" TargetType="RepeatButton">
        <Setter Property="FontFamily" Value="{StaticResource TelerikWebUI}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{telerik:CrystalResource ResourceKey=IconBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="UseLayoutRounding" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Grid>
                        <telerik:RadGlyph
                                Foreground="{TemplateBinding Foreground}"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                Glyph="{TemplateBinding Content}"/>
                        <Border x:Name="FocusVisual"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{telerik:CrystalResource ResourceKey=AccentFocusedBrush}"
                                BorderThickness="{telerik:CrystalResource ResourceKey=FocusThickness}"
                                CornerRadius="{telerik:CrystalResource ResourceKey=CornerRadius}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                Opacity="0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Foreground" Value="{telerik:CrystalResource ResourceKey=AccentMouseOverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="{telerik:CrystalResource ResourceKey=AccentPressedBrush}"/>
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="FocusVisual" Property="Opacity" Value="1"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="{telerik:CrystalResource ResourceKey=DisabledOpacity}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="RepeatButton" x:Key="ImageEditorDecreaseHandleStyle" BasedOn="{StaticResource IncreaseHandleBaseStyle}">
        <Setter Property="Margin" Value="0 0 4 0"/>
        <Setter Property="Content" Value="{StaticResource GlyphMinus}"/>
    </Style>
    <Style TargetType="RepeatButton" x:Key="ImageEditorIncreaseHandleStyle" BasedOn="{StaticResource IncreaseHandleBaseStyle}">
        <Setter Property="Margin" Value="4 0 0 0"/>
