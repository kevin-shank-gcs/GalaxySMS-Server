            <Setter.Value>
                <ControlTemplate TargetType="toolsUI:SelectionToolSettings">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="{telerik:CrystalResource ResourceKey=AlternativeBasicBrush}" BorderThickness="0 0 0 1" MinHeight="30">
                            <Grid>
                                <TextBlock x:Name="selectionToolHelperTextBlock" Text="{telerik:LocalizableResource Key=ImageEditor_Selection}" Visibility="Collapsed"/>
                                <TextBlock Style="{StaticResource HeadingTextBlockStyle}" Text="{Binding ElementName=selectionToolHelperTextBlock, Path=Text}"/>
                            </Grid>
                        </Border>
                        <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Margin="{TemplateBinding Padding}" Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                                <RowDefinition Height="Auto" MinHeight="36"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_Selection}" VerticalAlignment="Center"/>
                            <telerik:RadComboBox x:Name="PART_SelectionComboBox"
                                    Grid.Column="1"
                                    AutomationProperties.Name="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_Selection}"
                                    HorizontalAlignment="Right"
                                    SelectedIndex="0"
                                    Width="100"
                                    DisplayMemberPath="DisplayName"
                                    VerticalAlignment="Center"
                                    Margin="0 5"/>
                            <StackPanel Grid.Row="1">
                                <CheckBox x:Name="PART_SelectionLockRatioCheckBox"
                                        Content="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_LockRatio}"
                                        HorizontalAlignment="Left"
                                        IsChecked="False"
                                        Margin="0 5"
                                        Foreground="{telerik:CrystalResource ResourceKey=MarkerBrush}"/>
                                <CheckBox x:Name="PART_IsAutoResetSettingsEnabledCheckBox"
                                        Content="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_AutoResetSettings}"
                                        HorizontalAlignment="Left"
                                        IsChecked="False"
                                        Margin="0 5"
                                        Foreground="{telerik:CrystalResource ResourceKey=MarkerBrush}"/>
                            </StackPanel>
                            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0 10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Border BorderBrush="{telerik:CrystalResource ResourceKey=AlternativeBasicBrush}" BorderThickness="0 0 0 1" MinHeight="30">
                                    <Grid>
                                        <TextBlock x:Name="drawToolHeaderHelperTextBlock" Text="{telerik:LocalizableResource Key=ImageEditor_Draw}" Visibility="Collapsed"/>
                                        <TextBlock Style="{StaticResource HeadingTextBlockStyle}" Text="{Binding ElementName=drawToolHeaderHelperTextBlock, Path=Text}"/>
                                    </Grid>
                                </Border>
                                <Grid HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Margin="{TemplateBinding Padding}" Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <telerik:RadToggleButton x:Name="PART_IsDrawingEnabledToggleButton" Grid.Column="1" Margin="0 2 0 10" HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal">
                                            <telerik:RadGlyph
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Foreground="{telerik:CrystalResource ResourceKey=IconBrush}"
                                                    FontSize="16"
                                                    Glyph="{StaticResource GlyphPalette}"
                                                    RenderTransformOrigin="0.5 0.5"/>
                                            <TextBlock Margin="5 0" VerticalAlignment="Center" Text="{telerik:LocalizableResource Key=ImageEditor_Draw}"/>
                                        </StackPanel>
                                    </telerik:RadToggleButton>
                                    <TextBlock
                                            Grid.Row="1"
                                            Text="{telerik:LocalizableResource Key=ImageEditor_DrawTool_BrushSize}"
                                            Margin="0 5"
                                            Foreground="{telerik:CrystalResource ResourceKey=MarkerBrush}"
                                            VerticalAlignment="Center"/>
                                    <telerik:RadNumericUpDown x:Name="PART_BrushSizeNumericUpDown"
                                            AutomationProperties.Name="{telerik:LocalizableResource Key=ImageEditor_DrawTool_BrushSize}"
                                            Value="1"
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Minimum="1"
                                            Maximum="99"
                                            Margin="0 5"
                                            HorizontalAlignment="Right"
                                            MinWidth="100"/>
                                    <TextBlock
                                            Text="{telerik:LocalizableResource Key=ImageEditor_DrawTool_BrushColor}"
                                            Grid.Row="2"
                                            Margin="0 5"
                                            Foreground="{telerik:CrystalResource ResourceKey=MarkerBrush}"
                                            VerticalAlignment="Center"/>
                                    <telerik:RadColorPicker x:Name="PART_ColorPicker"
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            SelectedColor="Black"
                                            AutomationProperties.Name="{telerik:LocalizableResource Key=ImageEditor_DrawTool_BrushColor}"
                                            Margin="0 5"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            AutomaticColor="Black"
                                            NoColorText="{telerik:LocalizableResource Key=ImageEditor_ColorPicker_NoColorText_Black}"/>
                                </Grid>
                            </Grid>
                            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="-10 0 0 0" x:Name="PART_SelectionSettingsStackPanel"/>
                            <telerik:RadToggleButton x:Name="PART_InvertColorsToggleButton" Grid.Row="4" Grid.Column="0" Margin="0 2" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <telerik:RadGlyph
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{telerik:CrystalResource ResourceKey=IconBrush}"
                                            FontSize="16"
                                            Glyph="{StaticResource GlyphMirror}"
                                            RenderTransformOrigin="0.5 0.5"/>
                                    <TextBlock Margin="5 0" VerticalAlignment="Center" Text="{telerik:LocalizableResource Key=ImageEditor_SelectionTool_InvertColors}"/>
                                </StackPanel>
                            </telerik:RadToggleButton>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="imageEditor:RadImageEditor" BasedOn="{StaticResource RadImageEditorStyle}"/>
    <Style TargetType="toolsUI:InlineToolSettingsPane" BasedOn="{StaticResource InlineToolSettingsPaneStyle}"/>
    <Style TargetType="toolsUI:ToolSettingsPanel" BasedOn="{StaticResource ToolSettingsPanelStyle}"/>
    <Style TargetType="toolsUI:CropAdorner" BasedOn="{StaticResource CropAdornerStyle}"/>
    <Style TargetType="imageEditor:RadImageEditorUI" BasedOn="{StaticResource RadImageEditorUIStyle}"/>
    <Style TargetType="toolsUI:NumericPropertyEditor" BasedOn="{StaticResource NumericPropertyEditorStyle}"/>
    <Style TargetType="imaging:ZoomController" BasedOn="{StaticResource ZoomControllerStyle}"/>
    <Style TargetType="imaging:PercentComboBox" BasedOn="{StaticResource PercentComboBoxStyle}"/>
    <Style TargetType="imageEditor:RadImageEditorButton" BasedOn="{StaticResource RadImageEditorButtonStyle}"/>
    <Style TargetType="toolsUI:RoundCornersToolSettings" BasedOn="{StaticResource RoundCornersToolSettingsStyle}"/>
    <Style TargetType="toolsUI:CanvasResizeToolSettings" BasedOn="{StaticResource CanvasResizeToolSettingsStyle}"/>
    <Style TargetType="toolsUI:DrawTextToolSettings" BasedOn="{StaticResource DrawTextToolSettingsStyle}"/>
    <Style TargetType="toolsUI:ResizeToolSettings" BasedOn="{StaticResource ResizeToolSettingsStyle}"/>
    <Style TargetType="toolsUI:ToolSettingsHeader" BasedOn="{StaticResource ToolSettingsHeaderStyle}"/>
    <Style TargetType="toolsUI:DrawToolSettings" BasedOn="{StaticResource DrawToolSettingsStyle}"/>
    <Style TargetType="toolsUI:ShapeToolSettings" BasedOn="{StaticResource ShapeToolSettingsStyle}"/>
    <Style TargetType="toolsUI:SelectionToolSettings" BasedOn="{StaticResource SelectionToolSettingsStyle}"/>
</ResourceDictionary>
