                                    Foreground="{telerik:CrystalResource ResourceKey=IconBrush}"
                                    FontSize="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RenderTransformOrigin="0.5 0.5"
                                    Margin="{TemplateBinding Padding}"
                                    IsHitTestVisible="False"/>
