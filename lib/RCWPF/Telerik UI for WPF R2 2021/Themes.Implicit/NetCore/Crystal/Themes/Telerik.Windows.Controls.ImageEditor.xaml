                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="FlipVertical">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphFlipVertical}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Crop">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphCrop}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Pan">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphPan}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="DrawText">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphEditTools}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="HueShift">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphSaturation}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Saturation">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphGreyscale}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Contrast">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphBrightnessContrast}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Invert">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphMirror}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Sharpen">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphSharpen}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Blur">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphBlur}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Shape">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphShape}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Draw">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphPalette}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Selection">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphThreeStateNull}"/>
                        </DataTrigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Content" Property="Opacity" Value="{telerik:CrystalResource ResourceKey=DisabledOpacity}"/>
                            <Setter TargetName="Image" Property="Opacity" Value="{telerik:CrystalResource ResourceKey=DisabledOpacity}"/>
                            <Setter TargetName="Icon" Property="Opacity" Value="{telerik:CrystalResource ResourceKey=DisabledOpacity}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BorderVisual" Property="Background" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(mat:MaterialAssist.MouseOverBrush), Mode=OneWay}"/>
                            <Setter TargetName="BorderVisual" Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=(mat:MaterialAssist.MouseOverBrush), Mode=OneWay}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
