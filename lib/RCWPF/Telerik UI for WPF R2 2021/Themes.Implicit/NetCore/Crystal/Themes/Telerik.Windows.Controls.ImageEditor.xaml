                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphRotate}"/>
                            <Setter TargetName="Icon" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="180"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="Rotate90CCW">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphRotate}"/>
                            <Setter TargetName="Icon" Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="270"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ImageKey, RelativeSource={RelativeSource Self}}" Value="RoundCorners">
                            <Setter TargetName="Icon" Property="Glyph" Value="{StaticResource GlyphRoundCorners}"/>
                        </DataTrigger>
