                        </Trigger>
                        <Trigger Property="IsChecked" Value="True" SourceName="DropDownPart">
                            <Setter TargetName="ButtonPart" Property="Background" Value="{telerik1:FluentResource ResourceKey=MainBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True" SourceName="ButtonPart">
                            <Setter TargetName="DropDownPart" Property="Background" Value="{telerik1:FluentResource ResourceKey=MainBrush}"/>
                        </Trigger>
