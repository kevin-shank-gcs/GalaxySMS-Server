            <Setter.Value>
                <DataTemplate>
                    <Grid Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsDropPossible, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="5">
