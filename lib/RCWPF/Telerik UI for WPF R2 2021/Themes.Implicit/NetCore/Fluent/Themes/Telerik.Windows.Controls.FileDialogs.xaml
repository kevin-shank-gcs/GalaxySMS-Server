                <Setter TargetName="Icon" Property="TextBlock.Foreground" Value="{telerik:FluentResource ResourceKey=MarkerMouseOverBrush}"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsKeyboardFocusWithin" Value="True"/>
                    <Condition SourceName="ClearButton" Property="IsMouseOver" Value="False"/>
                    <Condition SourceName="ClearButton" Property="IsPressed" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="ClearButton" Property="Foreground" Value="{telerik:FluentResource ResourceKey=MarkerMouseOverBrush}"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition SourceName="ShowDialogButton" Property="IsKeyboardFocusWithin" Value="True"/>
                    <Condition SourceName="ShowDialogButton" Property="IsPressed" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="ShowDialogButton" Property="Foreground" Value="{telerik:FluentResource ResourceKey=AccentFocusedBrush}"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition SourceName="ClearButton" Property="IsKeyboardFocusWithin" Value="True"/>
                    <Condition SourceName="ClearButton" Property="IsPressed" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="ClearButton" Property="Foreground" Value="{telerik:FluentResource ResourceKey=AccentFocusedBrush}"/>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IconVisibility" Value="Visible"/>
                    <Condition SourceName="ClearButton" Property="Visibility" Value="Collapsed"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="WatermarkBox" Property="Padding" Value="5 0"/>
