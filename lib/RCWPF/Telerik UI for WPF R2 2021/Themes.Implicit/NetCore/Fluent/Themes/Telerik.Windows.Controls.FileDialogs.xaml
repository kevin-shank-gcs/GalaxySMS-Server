    </DataTemplate>
    <DataTemplate x:Key="ConfirmIconTemplate">
        <telerik:RadGlyph FontSize="24" Foreground="{telerik1:FluentResource ResourceKey=IconBrush}" Glyph="{StaticResource GlyphQuestion}"/>
