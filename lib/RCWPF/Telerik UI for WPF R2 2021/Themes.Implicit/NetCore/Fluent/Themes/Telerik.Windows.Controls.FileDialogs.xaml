            </Trigger>
            <Trigger Property="IsReadOnly" Value="True">
                <Setter TargetName="InnerBackgroundVisual" Property="Background" Value="{telerik1:FluentResource ResourceKey=ReadOnlyBackgroundBrush}"/>
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsReadOnly" Value="True"/>
                    <Condition Property="IsEnabled" Value="True"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="OuterBorderVisual" Property="Background" Value="{telerik1:FluentResource ResourceKey=PrimaryBrush}"/>
                <Setter TargetName="OuterBorderVisual" Property="BorderBrush" Value="{telerik1:FluentResource ResourceKey=ReadOnlyBorderBrush}"/>
            </MultiTrigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter TargetName="Icon" Property="Opacity" Value="{telerik:FluentResource ResourceKey=DisabledOpacity}"/>
                <Setter TargetName="InnerBackgroundVisual" Property="Background" Value="{telerik:FluentResource ResourceKey=PrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{telerik:FluentResource ResourceKey=BasicBrush}"/>
            </Trigger>
        </ControlTemplate.Triggers>
